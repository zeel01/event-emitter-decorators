{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "semi": ["error", "always"]
    }
}